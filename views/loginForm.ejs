<% layout('layout') -%>
<% script('/js/dom/loginForm.js') -%>
<% stylesheet('/css/login.css') -%>

    <div class="col-lg-4 col-lg-offset-4 col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-12" id="signin-form">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Please sign in</h3>
        </div>
        <div class="panel-body">
          <% if (message) { %>
          <div class="alert alert-danger"><%= message %></div>
          <% } %>
          <form accept-charset="UTF-8" role="form" action="login" method="post">
            <fieldset>
              <div class="form-group">
                <input class="form-control" placeholder="E-mail" name="username" type="text" autofocus>
              </div>
              <div class="form-group">
                <input class="form-control" placeholder="Password" name="password" type="password" value="">
              </div>
              <!--todo-->
              <div class="checkbox" style="line-height:20px;">
                <label>
                  <input name="remember" type="checkbox" value="Remember Me"> Remember Me
                </label>
              </div>
              <input type="hidden" id="redirectUrl" name="redirectUrl" value="">
              <input class="btn btn-lg btn-success btn-block" type="submit" value="Login">
              <h4 style="text-align:center">or</h4>
              <a class="btn btn-lg btn-primary btn-block" id="sign-in-google"><i class="icon-google-plus"></i> Sign In with Google</a>
              <a class="btn btn-lg btn-primary btn-block" id="sign-in-twitter"><i class="icon-twitter"></i> Sign In with Twitter</a>
            </fieldset>
          </form>
        </div>
      </div>
    </div>